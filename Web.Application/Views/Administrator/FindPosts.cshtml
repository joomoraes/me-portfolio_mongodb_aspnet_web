@using Web.Application.Controllers.Outputs
@model IEnumerable<Web.Application.Controllers.Outputs.PostList>
<thead>
    <tr>
        <th scope="col">Title</th>
        <th scope="col">Text</th>
        <th scope="col">Post By</th>
        <th scope="col">Create At</th>
        <th scope="col">delete</th>
        <th scope="col">update</th>
    </tr>
</thead>
@foreach (var item in Model ?? new List<PostList>())
{
    <tbody>
        <tr>
            <th scope="row">@item.Title</th>
            <th scope="row">@item.Text</th>
            <th scope="row">@item.Name</th>
            <th scope="row">@item.CreateAt</th>
            <th scope="row">
                <button class="btn-danger" onclick="PostDelete('@item.Id')">DELETE</button>
            </th>
            <th scope="row">
                <button class="btn-primary" onclick="PostUpdate('@item.Id')">UPDATE</button>
            </th>
        </tr>
    </tbody>
}

<script>

    function PostDelete(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("PostDelete", "Administrator")',
                    data: { id: id },
                    success: function (msg) {
                        Swal.fire({
                            title: 'Deleted!',
                            text: "Your file has been deleted.",
                            icon: 'success',
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'Ok!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.reload();
                            }
                        })
                    }
                })
            }
        })
    }

</script>


